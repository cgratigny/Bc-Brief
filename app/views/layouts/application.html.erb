<!DOCTYPE html>
<html>
<head>
  <title>Basecamp Projects</title>
  <%= stylesheet_link_tag "blueprint/screen", "blueprint/ie", "style" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	
	<div id="container">
		
	 <% if flash[:notice] %>
	      <p class="notice" id="topNotice"><%= flash[:notice] %></p>
	    <% end %>
	    <% if flash[:error] %>
	      <p class="error" id="topError"><%= flash[:error] %></p>
	 <% end %>
		
		<div class="guts prepend-1 prepend-top append-1">
			
			<div id="header">
				
				<div class="nav medium">
					<ul>
						<li><%= link_to("All","/projects/index") %></li>
						<li><%= link_to("Hidden","/projects/hidden") %></li>
					</ul>
				</div>
				<div id="logo" class="append-bottom prepend-1">Basecamp Projects</div>
				<br class="clear" />
			</div>
			
			
			<%= yield %>
		</div>
	</div>

</body>
</html>
